<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clasificacion">

    <TextView
        android:id="@+id/Txt_Clasificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Clasificacion"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="24dp"
        android:fontFamily="@font/cherry_cream_soda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Btnvolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@drawable/button"
        android:text="Volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Layout_Clasificacion" />

    <LinearLayout
        android:id="@+id/Layout_Clasificacion"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/panel_pregunta"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txt_Clasificacion">

        <LinearLayout
            android:id="@+id/Layout_Jugadores"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight= "5dp"
            android:layout_marginBottom= "10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TXT_CabeceraJugadores"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text="JUGADORES"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_NomJugador1"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_NomJugador2"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_NomJugador3"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_NomJugador4"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_NomJugador5"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_Puntos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight= "10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom= "10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TXT_CabeceraPuntuaciones"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text="PUNTUACIONES"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_PuntuacionJ1"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_PuntuacionJ2"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_PuntuacionJ3"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_PuntuacionJ4"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TXT_PuntuacionJ5"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/cherry_cream_soda"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>